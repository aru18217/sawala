<%- include('layout/header-landing.ejs') %>
<main>
  <section class="form-section">
    <div class="container">
        <div class="row">
          <div class="content-wrapper">
            <div class="col-6">
              <img src="img/register.png" alt="">
            </div>
          </div>
          <div class="content-wrapper">
            <div class="col-6">
                <h2 class="mb-1">Register</h2>
                <p>Tunggu apalagi register sekarang</p>
                <form action="/register" method="POST" enctype="multipart/form-data">
                  <div class="mb-3 col-12">
                    <label for="exampleInputEmail1" class="form-label">Email address</label>
                    <input name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                  </div>
                  <div class="mb-3 col-12">
                    <label for="exampleInputEmail1" class="form-label">Full Name</label>
                    <input name="fullname" class="form-control">
                  </div>
                   <div class="mb-3 col-12">
                    <label for="exampleInputEmail1" class="form-label">NPM</label>
                    <input name="npm" class="form-control">
                  </div>
                  <div class="mb-3 col-12">
                    <label for="tahun"  class="form-label">Tahun ngkatan</label><br>
                    <input class="form-control" id="tahun" name="tahun">
                  </div>
                  <div class="mb-3 col-12">
                    <label for="prodi"  class="form-label">Program Studi</label><br>
                    <input class="form-control" id="prodi" name="prodi">
                    <div id="passwordHelpBlock" class="form-text">
                    Contoh : D3TI3A
                    </div>
                  </div>
                  <div class="mb-3 col-12">
                    <label for="exampleInputEmail1" class="form-label">Username</label>
                    <input name="username" class="form-control" id="inputfullname">
                  </div>
                  <div class="mb-3 col-12">
                    <label for="inputPassword5" class="form-label">Password</label>
                    <input name="password" id="inputPassword5" class="form-control" aria-labelledby="passwordHelpBlock" type="password">
                    <div id="passwordHelpBlock" class="form-text">
                      Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
                    </div>
                  </div>
                  <div class="mb-3 col-12">
                    <label for="ktm"  class="form-label">Upload Kartu Tanda Mahasiswa (KTM)</label><br>
                    <input type="file" lass="form-control" id="ktm" name="ktm" accept="image/*">
                  </div>
                  <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Check me out</label>
                  </div>
                  <input type="submit" value="Register" class="btn btn-primary">
                  <a href="login" type="button" class="btn btn-warning" >Login</a>
                  <a href="landingpage" type="button" class="btn btn-success">Back</a>
                </form>
              </div>
            </div>
          </div>
        </div>
    </div>
</section>
</main>

